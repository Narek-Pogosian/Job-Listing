generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model JobListing {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  city            String
  company         String
  details         String?
  salary          Int
  jobType         JobType
  experienceLevel ExperienceLevel
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

enum JobType {
  full_time
  part_time
  internship
}

enum ExperienceLevel {
  junior
  mid_level
  senior
}
