generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model JobListing {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  city            String
  company         String
  details         String?
  minimumSalary   Int
  jobType         JobType
  experienceLevel ExperienceLevel
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

enum JobType {
  FULL_TIME
  PART_TIME
  INTERNSHIP
}

enum ExperienceLevel {
  JUNIOR
  MID_LEVEL
  SENIOR
}
